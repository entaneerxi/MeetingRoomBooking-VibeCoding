@model MeetingRoomBooking.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container">
    <h1>Delete Booking</h1>
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this booking?</h4>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="card">
        <div class="card-header bg-light">
            <h5>@Model.Title</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Room</dt>
                        <dd class="col-sm-8">@Model.Room.Name</dd>
                        
                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.BookingDate.ToString("dddd, MMMM d, yyyy")</dd>
                        
                        <dt class="col-sm-4">Time</dt>
                        <dd class="col-sm-8">@Model.StartTime.ToString("HH:mm") - @Model.EndTime.ToString("HH:mm")</dd>
                        
                        <dt class="col-sm-4">Booked By</dt>
                        <dd class="col-sm-8">@Model.BookedBy</dd>
                        
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Status)
                            {
                                case BookingStatus.Approved:
                                    <span class="badge bg-success">Approved</span>
                                    break;
                                case BookingStatus.Pending:
                                    <span class="badge bg-warning text-dark">Pending</span>
                                    break;
                                case BookingStatus.Rejected:
                                    <span class="badge bg-danger">Rejected</span>
                                    break;
                                case BookingStatus.Cancelled:
                                    <span class="badge bg-secondary">Cancelled</span>
                                    break;
                            }
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5>Booking Description</h5>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="BookingId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <div class="alert alert-info">
            <h5>Alternatives to deletion</h5>
            <p>Instead of deleting this booking, you can:</p>
            <ul>
                <li>Change the status to "Cancelled" to keep a record of the booking</li>
                <li>Reschedule the booking to a different time or room</li>
            </ul>
            <div class="mt-2">
                <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary">Edit Instead</a>
            </div>
        </div>
    </div>
</div>