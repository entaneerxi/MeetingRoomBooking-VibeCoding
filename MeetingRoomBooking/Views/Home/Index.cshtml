@{
    ViewData["Title"] = "Home";
    var stats = ViewData["Stats"] as dynamic;
    var todayBookings = ViewData["TodayBookings"] as List<Booking>;
}

<div class="text-center mt-5 mb-4">
    <h1 class="display-4 fw-bold">Meeting Room Booking System</h1>
    <p class="lead">Simplify your workspace management with our efficient booking system</p>
</div>

<!-- Dashboard Statistics -->
<div class="dashboard-section">
    <div class="row g-4">
        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-primary bg-opacity-10 text-primary">
                <i class="bi bi-building fs-1"></i>
                <span class="number">@stats.TotalRooms</span>
                <span class="label">Available Rooms</span>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-success bg-opacity-10 text-success">
                <i class="bi bi-calendar-check fs-1"></i>
                <span class="number">@stats.TotalBookings</span>
                <span class="label">Total Bookings</span>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-info bg-opacity-10 text-info">
                <i class="bi bi-calendar-date fs-1"></i>
                <span class="number">@stats.TodayBookings</span>
                <span class="label">Today's Bookings</span>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stat-card bg-warning bg-opacity-10 text-warning">
                <i class="bi bi-calendar-plus fs-1"></i>
                <span class="number">@stats.UpcomingBookings</span>
                <span class="label">Upcoming Bookings</span>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="dashboard-section">
    <div class="row">
        <div class="col-12">
            <h4 class="mb-4"><i class="bi bi-lightning-charge"></i> Quick Actions</h4>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon">
                        <i class="bi bi-calendar-plus"></i>
                    </div>
                    <h5 class="card-title">Book a Room</h5>
                    <p class="card-text">Schedule a new meeting in any available room</p>
                    <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon">
                        <i class="bi bi-calendar3"></i>
                    </div>
                    <h5 class="card-title">View Calendar</h5>
                    <p class="card-text">See all bookings in a convenient calendar view</p>
                    <a asp-controller="Bookings" asp-action="Calendar" class="btn btn-secondary">Calendar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <h5 class="card-title">View Rooms</h5>
                    <p class="card-text">Browse all available meeting rooms and their details</p>
                    <a asp-controller="Rooms" asp-action="Index" class="btn btn-info">View Rooms</a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (todayBookings != null && todayBookings.Any())
{
    <div class="dashboard-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4><i class="bi bi-calendar-day"></i> Today's Bookings (@DateTime.Today.ToString("dddd, MMMM d, yyyy"))</h4>
            <a asp-controller="Bookings" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Time</th>
                        <th>Room</th>
                        <th>Meeting</th>
                        <th>Booked By</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in todayBookings)
                    {
                        <tr>
                            <td>@booking.StartTime.ToString("HH:mm") - @booking.EndTime.ToString("HH:mm")</td>
                            <td>@booking.Room.Name</td>
                            <td>@booking.Title</td>
                            <td>@booking.BookedBy</td>
                            <td>
                                @switch (booking.Status)
                                {
                                    case BookingStatus.Approved:
                                        <span class="badge bg-success">Approved</span>
                                        break;
                                    case BookingStatus.Pending:
                                        <span class="badge bg-warning text-dark">Pending</span>
                                        break;
                                    case BookingStatus.Rejected:
                                        <span class="badge bg-danger">Rejected</span>
                                        break;
                                    case BookingStatus.Cancelled:
                                        <span class="badge bg-secondary">Cancelled</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-controller="Bookings" asp-action="Details" asp-route-id="@booking.BookingId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="dashboard-section text-center">
        <div class="p-4">
            <i class="bi bi-calendar-x" style="font-size: 3rem; color: #6c757d;"></i>
            <h5 class="mt-3">No bookings scheduled for today</h5>
            <p class="text-muted">Create a new booking to get started</p>
            <a asp-controller="Bookings" asp-action="Create" class="btn btn-primary">Book a Room</a>
        </div>
    </div>
}
