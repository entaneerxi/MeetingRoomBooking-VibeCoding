@model IEnumerable<MeetingRoomBooking.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Meeting Rooms</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Room
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@item.Name</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Room @item.RoomNumber (Floor @item.FloorNumber)</h6>
                        <p class="card-text">@item.Description</p>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item">
                                <strong>Capacity:</strong> @item.Capacity people
                            </li>
                            <li class="list-group-item">
                                <strong>Projector:</strong> @(item.HasProjector ? "Yes" : "No")
                            </li>
                            <li class="list-group-item">
                                <strong>Video Conference:</strong> @(item.HasVideoConference ? "Yes" : "No")
                            </li>
                        </ul>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-info">
                                Details
                            </a>
                            <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@item.RoomId" class="btn btn-success">
                                Book Now
                            </a>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>